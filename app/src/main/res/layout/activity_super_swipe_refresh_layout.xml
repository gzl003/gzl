    android:id="@+id/activity_super_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhiguang.li.activity.SuperSwipeRefreshLayoutActivity">

    <com.zhiguang.li.widget.SuperSwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/My_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhiguang.li.widget.SuperSwipeRefreshLayout>
</RelativeLayout>
