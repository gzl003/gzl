<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.YkTopTabActivity">

    <com.zhiguang.li.widget.tablayout.TabLayout
        android:id="@+id/tl_style_one_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorDrawable="@drawable/indicator_red"
        app:tabMode="scrollable" />
    <!--
     app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorHeight="3dp"-->
    <androidx.core.view.ViewPager
        android:id="@+id/vp_style_one_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_style_one_tab" />

</RelativeLayout>